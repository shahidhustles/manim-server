# API Keys needed for the video generation server

# Google Gemini API Key (for generating content and transcripts)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ElevenLabs API Key (for text-to-speech generation)
# Get from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Cloudinary credentials (for video hosting)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Optional: Port for local development (Railway/Render will override this)
PORT=5001

source .venv/bin/activate && python3 app.py